<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            style="@style/white_font_bold"
            android:textSize="34sp"
            android:text="Settings"
            android:visibility="gone"/>
        <android.support.v7.widget.CardView
            android:id="@+id/setting_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/itemBackground"
            app:cardCornerRadius="4dp"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp">
            <RelativeLayout
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/setting_language_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/white_font_bold"
                    android:text="@string/setting_language"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/setting_language_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/setting_language_title"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_centerHorizontal="true"
                    style="@style/font_grey"
                    android:text="English >"/>
            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/setting_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/itemBackground"
            app:cardCornerRadius="4dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp">
            <RelativeLayout
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/setting_theme_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/white_font_bold"
                    android:text="@string/setting_theme"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/setting_theme_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/setting_theme_title"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_centerHorizontal="true"
                    style="@style/font_grey"
                    android:text="@string/setting_theme_dark"/>
            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/setting_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/itemBackground"
            app:cardCornerRadius="4dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp">
            <RelativeLayout
                android:layout_marginTop="13dp"
                android:layout_marginBottom="13dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/setting_version_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/white_font_bold"
                    android:text="@string/setting_version"
                    android:layout_marginLeft="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/setting_version_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/setting_version_title"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_centerHorizontal="true"
                    style="@style/font_grey" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/log_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/btn_color_orange"
            android:clickable="false"
            android:text="@string/action_log_out"
            android:textColor="@color/login_text_color"
            android:textStyle="bold" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

