<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.AccountFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        app:subtitleTextColor="@color/primary_color_grey"
        app:titleTextColor="@color/primary_color_grey">

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/activity_padding_double">

            <ImageView
                android:id="@+id/account_iv_avatar"
                android:layout_width="@dimen/width_56"
                android:layout_height="@dimen/height_56"
                android:src="@drawable/ic_account_avatar" />

            <TextView
                android:id="@+id/account_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/log_in_cybex"
                android:textColor="@color/font_color_white_dark"
                android:layout_marginTop="@dimen/activity_margin"
                android:drawablePadding="@dimen/margin_8"
                android:textSize="@dimen/font_34"
                android:singleLine="true"
                android:ellipsize="end"/>

            <LinearLayout
                android:id="@+id/account_coin_age_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    style="@style/font_gray_bold_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_coin_age_with_colon"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:id="@+id/account_coin_age"
                    style="@style/font_gray_bold_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_6"
                    android:layout_gravity="center_vertical"/>
                <ImageView
                    android:id="@+id/account_coin_age_question_marker"
                    android:src="@drawable/ic_cloud_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/account_layout_item_my_portfolio"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_60"
                android:layout_marginTop="@dimen/activity_margin_double">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_balance_wallet"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/activity_margin">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_arrow_forward_right_16_px"
                        android:layout_centerVertical="true"
                        style="@style/font_white_dark_large"
                        android:text="@string/text_my_balance"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_1"
                        android:layout_alignParentBottom="true"
                        android:background="@color/divider_color"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/account_layout_item_gateway"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_60">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_gateway"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/activity_margin">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_arrow_forward_right_16_px"
                        android:layout_centerVertical="true"
                        style="@style/font_white_dark_large"
                        android:text="@string/text_deposit_withdraw"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_1"
                        android:layout_alignParentBottom="true"
                        android:background="@color/divider_color"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/account_layout_item_address_manager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_60">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_address_28px"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/activity_margin">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_arrow_forward_right_16_px"
                        android:layout_centerVertical="true"
                        style="@style/font_white_dark_large"
                        android:text="@string/text_address_management"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_1"
                        android:layout_alignParentBottom="true"
                        android:background="@color/divider_color"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/account_layout_item_open_order"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_60">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_open_order"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/activity_margin">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_arrow_forward_right_16_px"
                        android:layout_centerVertical="true"
                        style="@style/font_white_dark_large"
                        android:text="@string/title_orders"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_1"
                        android:layout_alignParentBottom="true"
                        android:background="@color/divider_color"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/account_layout_item_lockup_asset"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_60">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_lock_asset"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/activity_margin">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/ic_arrow_forward_right_16_px"
                        android:layout_centerVertical="true"
                        style="@style/font_white_dark_large"
                        android:text="@string/text_lockup_assets"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_1"
                        android:layout_alignParentBottom="true"
                        android:background="@color/divider_color"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/account_layout_item_hash_lock"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_60">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_hash_locks_assets_24_px" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/activity_margin">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_arrow_forward_right_16_px"
                        android:layout_centerVertical="true"
                        style="@style/font_white_dark_large"
                        android:text="@string/text_hash_lockup"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_1"
                        android:layout_alignParentBottom="true"
                        android:background="@color/divider_color"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_account"
            android:layout_gravity="bottom"/>

    </FrameLayout>

</LinearLayout>