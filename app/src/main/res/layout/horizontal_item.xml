<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/coin_pair_item_card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="4dp"
    android:clickable="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/coin_pair_card_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/market_coin_pair_unselected">

        <TextView
            android:id="@+id/base_currency_market_horizontal_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.13"
            style="@style/font_white_dark_bold_large"
            android:text="BTC"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/quote_currency_market_horizontal_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.13"
            android:layout_toEndOf="@id/base_currency_market_horizontal_view"
            android:layout_toRightOf="@id/base_currency_market_horizontal_view"
            android:layout_alignBottom="@id/base_currency_market_horizontal_view"
            android:text="/USD"
            android:textColor="#B3FFFFFF"
            style="@style/font_white_dark_bold_large"/>
        <TextView
            android:id="@+id/coin_pair_card_view_percentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:text="+22.40%"
            android:textStyle="bold"
            android:layout_below="@id/base_currency_market_horizontal_view"
            android:layout_alignLeft="@id/base_currency_market_horizontal_view"
            />

        <TextView
            android:id="@+id/market_page_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24h"
            android:textColor="#FFFFFF"
            android:layout_alignBottom="@id/coin_pair_card_view_percentage"
            android:layout_alignRight="@id/quote_currency_market_horizontal_view"
            android:textSize="12sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>